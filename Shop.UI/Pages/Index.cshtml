@model Shop.UI.Pages.Index

@{
}

<div class="main-body">
    @{
        foreach (var p in @Model.Products)
        {
            <a asp-page="Product" asp-route-name="@p.Name.Replace(" ", "-")">@p.Name - @p.Description</a><br/>
            <hr>
        }
    }

    @await Component.InvokeAsync("Cart")
</div>